@model TaskTracker.Models.TimerSetting

@{
    ViewBag.Title = "EditTimer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("EditTimer", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Timer Setting</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @*@Html.HiddenFor(model => model.StartTime)

            @Html.HiddenFor(model => model.EndTime)

            @Html.HiddenFor(model => model.CreatedOn)

            @Html.HiddenFor(model => model.ModifiedOn)*@

        <div class="form-group">
            @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control", placeholder = "HH/MM/SS", required = "required" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control", placeholder = "HH/MM/SS", required = "required" } })
                @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.IsDeleted)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

